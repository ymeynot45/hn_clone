
<h2> <%= @post.title %></h2>
<p>  <%= @post.content%> </p>

<%= form_for :post, url: posts_path do |f| %>
  <p>
    <% if @post%> 
      <%if @post.errors[:title].any?%> 
        <%=@errors[:title] %>
      <%end%>
    <%end%><br>
    <%= f.label :title %><br>
    <%= f.text_field :title%>
  <p>
    <% if @post%> 
      <%if @post.errors[:content].any?%> 
        <%=@errors[:content] %>
      <%end%>
    <%end%><br>
     <%= f.label :content %><br>
    <%= f.text_area :content %>
  <p>
    <%= f.submit  %><br>
<% end %>
